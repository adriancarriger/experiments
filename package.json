{
  "name": "experiments",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run commitlint",
    "semantic-release": "semantic-release -d",
    "commitlint": "commitlint --from=HEAD~1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adriancarriger/experiments.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adriancarriger/experiments/issues"
  },
  "homepage": "https://github.com/adriancarriger/experiments#readme",
  "devDependencies": {
    "@commitlint/cli": "^6.0.2",
    "@commitlint/config-conventional": "^6.0.2",
    "@semantic-release/git": "^2.0.2",
    "@semantic-release/github": "^3.0.3",
    "semantic-release": "^12.2.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "getLastRelease": "@semantic-release/git",
    "publish": [
      "@semantic-release/github"
    ],
    "analyzeCommits": {
      "releaseRules": [
        {"tag": "Docs", "message":"/README/", "release": "patch"},
        {"type": "New", "release": "patch"}
      ]
    },
    "verifyRelease": [
      "./scripts/semantic-release.js"
    ]
  }
}
